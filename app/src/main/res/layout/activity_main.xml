            android:layout_marginTop="13dp"
            android:onClick="dropIn"
            app:layout_column="2"
            app:layout_row="1" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginTop="17dp"
            android:onClick="dropIn"
